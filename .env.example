# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=false
SECRET_KEY=your-secret-key-here-change-in-production

# Logging
LOG_LEVEL=INFO

# Gunicorn Configuration (Production)
GUNICORN_PROCESSES=2
GUNICORN_THREADS=4
GUNICORN_BIND=0.0.0.0:8080

# CORS (comma-separated origins)
CORS_ORIGINS=http://127.0.0.1:5000,http://localhost:5000

# File Upload Limits
MAX_CONTENT_LENGTH=16777216          # 16MB in bytes (for uploads)
ALLOWED_EXTENSIONS=xlsx,xls          # Comma-separated file extensions

# Data Processing Limits
MAX_FILE_SIZE_IMPORT=104857600       # 100MB in bytes (for genetic data import)
MAX_FILE_SIZE_LOAD=524288000         # 500MB in bytes (for JSON loading)
MAX_LINE_COUNT=1000000               # Maximum lines to process in a file

# Rate Limiting (Async Crawler)
RATELIMIT_ENABLED=true
REQUEST_DELAY=1.5                    # Seconds between SNPedia requests (1.5s recommended to avoid 502 errors)
MAX_RETRIES=5                        # Number of retry attempts (increased for server errors)
RETRY_DELAY=5                        # Seconds to wait before retry (exponential backoff applied)
REQUEST_TIMEOUT=30                   # Request timeout in seconds

# Note: Lower REQUEST_DELAY (e.g., 0.5-1.0) = faster but may cause server errors
#       Higher REQUEST_DELAY (e.g., 2.0-3.0) = slower but more reliable
#       Async crawler uses 3-5 concurrent requests automatically

# Session Configuration
SESSION_LIFETIME=3600                # Session lifetime in seconds (1 hour)

# Data Directories
DATA_DIR=data
BACKUP_DIR=data/backups
EXPORT_DIR=data                      # Directory where exported data will be saved

# SNPedia Configuration
SNPEDIA_BASE_URL=https://bots.snpedia.com

# Progress Saving
SAVE_PROGRESS_INTERVAL=10            # Save progress every N requests

# Caching Configuration
CACHE_ENABLED=true                   # Enable/disable caching
CACHE_MAX_SIZE=100                   # Maximum number of cached entries
CACHE_TTL=3600                       # Cache time-to-live in seconds (1 hour)

# Pagination Configuration
DEFAULT_PAGE_SIZE=100                # Default number of items per page
MAX_PAGE_SIZE=1000                   # Maximum allowed page size
