# syntax = docker/dockerfile:latest

# Development Dockerfile with dev dependencies and hot reload
FROM docker.io/python:3.13-slim AS development

LABEL org.opencontainers.image.title="OSGenome Development"
LABEL org.opencontainers.image.description="Development environment for OSGenome with hot reload and dev tools"

# Install system dependencies including development tools
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        curl \
        ca-certificates \
        git \
        build-essential && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

# Install uv for dependency management
COPY --from=ghcr.io/astral-sh/uv:latest /uv /bin/uv

# Create non-root user
RUN useradd -m -u 1000 appuser

# Set working directory and change ownership
WORKDIR /app
RUN chown appuser:appuser /app

# Create data directory
RUN mkdir -p /app/data /app/logs && \
    chown -R appuser:appuser /app/data /app/logs

# Switch to non-root user for dependency installation
USER appuser

# Copy dependency files
COPY --chown=appuser:appuser pyproject.toml uv.lock README.md ./

# Install all dependencies including dev dependencies
RUN uv sync --frozen --no-cache

# Set environment variables for development
ENV PATH="/app/.venv/bin:$PATH" \
    PYTHONPATH="/app" \
    PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    FLASK_ENV=development \
    LOG_LEVEL=DEBUG

EXPOSE 5000

# Development health check (simpler, faster)
HEALTHCHECK --interval=30s --timeout=5s --start-period=30s --retries=2 \
    CMD curl -f http://localhost:5000/api/health || exit 1

# Development entrypoint with hot reload - use virtual environment directly
ENTRYPOINT ["/app/.venv/bin/python", "SNPedia/app.py"]
